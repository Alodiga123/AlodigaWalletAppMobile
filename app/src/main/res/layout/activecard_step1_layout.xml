<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="15dp"
        android:background="@drawable/fondo_960x750"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="391dp"
            android:layout_height="409dp"
            android:background="@drawable/radius_fondo"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="15dp">


            <View
                android:id="@+id/space1"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@color/white_greyish" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="118dp"
                android:gravity="top|center"
                android:padding="10dp"
                android:text="@string/activate_card_title"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/login_layout"
                android:padding="8dp"
                android:text="@string/activate_card_number"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/activate_number"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvintentos"
                android:layout_below="@+id/select2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/white_greyish"
                android:textSize="17sp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white"
                android:paddingBottom="10dp"/>

            <Button
                android:id="@+id/process"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="12dp"
                android:paddingTop="20dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/backToLoginBtn"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector_2"
                android:padding="12dp"
                android:paddingTop="15dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="328dp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="-25dip"
            android:background="@drawable/fondo_960x750"
            android:orientation="vertical"
            android:paddingBottom="0dp"></LinearLayout>
</RelativeLayout>
    </ScrollView>
