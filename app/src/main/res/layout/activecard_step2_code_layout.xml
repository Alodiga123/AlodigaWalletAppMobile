<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    android:padding="15dp" >
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="409dp"
        android:background="@drawable/radius_fondo"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="15dp">


    <View
        android:id="@+id/space1"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/white_greyish" />


    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="118dp"
        android:gravity="top|center"
        android:padding="10dp"
        android:text="@string/activate_card_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/pin_info"
        android:textColor="@color/white_greyish"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edtMobileCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/pin"
        android:inputType="numberPassword"
        android:padding="10dp"
        android:maxLength="4"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />

    <Button
    android:id="@+id/step1_next_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/loginbutton_selector"
    android:padding="3dp"
    android:text="@string/process"
    android:textColor="@color/white"
    android:textSize="17sp"
    android:textStyle="bold" />
    <Button
        android:id="@+id/backToLoginBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton_selector_2"
        android:padding="3dp"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="328dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="-25dip"
        android:background="@drawable/fondo_960x750"
        android:orientation="vertical"
        android:paddingBottom="0dp"></LinearLayout>
</RelativeLayout>

</ScrollView>