<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
<RelativeLayout
    android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:background="@color/background_g"
    >

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="268dp"
            android:layout_height="125dp"
            android:layout_below="@+id/main_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="98dp"
            android:padding="20dp"
            android:src="@drawable/error_yellow"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TituloApp"
            android:layout_width="248dp"
            android:layout_height="88dp"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@color/Gray"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/connection_error"
            android:textColor="@color/white_greyish" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:background="@drawable/loginbutton_selector"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/action_reintent"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/cancel"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/loginbutton_selector_2"
            android:padding="3dp"
            android:paddingBottom="10dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>

    <!--<Button
        android:id="@+id/btn_restart"
        style="@style/ButtonTheme"
        android:onClick="evGoBack"
        android:layout_below="@+id/TituloApp"
        android:text="@string/action_reintent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="24dp" />-->


</RelativeLayout>

</ScrollView>