<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_g"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:background="@color/background_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="200dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:orientation="vertical"
        android:padding="20dp">


        <View
            android:id="@+id/space1"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_below="@+id/simpleSwitch"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@color/white_greyish" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="79dp"
                android:layout_height="59dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/img_app_logo" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/nameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerwin Gomez"
                    android:textSize="18sp"
                    android:textColor="@color/white_greyish"

                    />

                <TextView
                    android:id="@+id/phoneuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="584241934005"
                    android:textColor="@color/white_greyish"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/emailuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@alodiga.com"
                    android:textColor="@color/white_greyish"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish"
            android:paddingTop="10dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/space3"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/my_qr_title"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/space"/>


            <TextView
                android:id="@+id/inf_qr"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space"
                android:gravity="center"
                android:text="@string/welcome_qr_code"
                android:textColor="@color/white_greyish"
                android:textSize="16sp"
                android:textStyle="bold" />




                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    />

    </LinearLayout>
</RelativeLayout>

</ScrollView>