<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@drawable/side_nav_bar">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/recharge_title"
            android:textColor="@color/background_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/pais_info"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/spinner_pais"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_greyish"
            android:textSize="10sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bank_info"
            android:textColor="@color/white_greyish"
            android:textSize="14sp"/>
        <Spinner
            android:id="@+id/spinnerbank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_greyish"
            android:textSize="10sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/producto_info"
            android:textColor="@color/white_greyish"
            android:textSize="14sp"/>
        <Spinner
            android:id="@+id/spinnerproducto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_greyish"
            android:textSize="10sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:text="@string/id_recharge"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edtCOD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/rechargeCOD"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="10sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/amount_info"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="12sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />


        <Button
            android:id="@+id/signFind"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="12dp"
            android:text="@string/buttonProcessRecharge"
            android:textColor="@color/background_color"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>