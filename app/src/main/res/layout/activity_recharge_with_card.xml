<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:background="@drawable/side_nav_bar"
        >

        <TextView
            android:id="@+id/textbox"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:hint="Type to text"
            android:text="@string/recharge_whih_card_title"
            android:textColor="@color/background_color"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbox"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/producto_info"
            android:textColor="@color/white_greyish"
            android:textSize="14sp"/>
        <Spinner
            android:id="@+id/spinnerproducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_greyish"
            android:textSize="10sp"
            android:backgroundTint="@color/white_greyish"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/amount_info_"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:drawablePadding="0dp"
                android:gravity="center_vertical"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/activate_card_number"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/balance_card_number"
                android:inputType="number"
                android:maxLength="45"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/cvv_title"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/ccv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/cvv"
                android:inputType="number"
                android:maxLength="3"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/date_recharge"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />


            <GridLayout
                android:columnCount="4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/month"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp" />


                <Spinner
                    android:id="@+id/month"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="@color/white_greyish"
                    android:padding="3dp"
                    android:layout_gravity="fill_horizontal"
                    android:textAlignment="gravity"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="10sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/year"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/year"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="@color/white_greyish"
                    android:inputType="phone"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="10sp" />


            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/name_"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edttrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/name_1"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white" />




        <Button
            android:id="@+id/signFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="12dp"
            android:text="@string/next"
            android:textColor="@color/background_color"
            android:textSize="14sp"
            android:textStyle="bold" />

            <Button
                android:id="@+id/backToLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="12dp"
                android:text="@string/back"
                android:textColor="@color/background_color"
                android:textSize="14sp"
                android:textStyle="bold" />
    </LinearLayout>



</RelativeLayout>
    </ScrollView>
