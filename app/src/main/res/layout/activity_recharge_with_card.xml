<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:background="@drawable/side_nav_bar"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textbox"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:gravity="top|center"
                android:hint="Type to text"
                android:text="@string/recharge_whih_card_title"
                android:textColor="@color/background_color"
                android:textSize="25sp"
                android:textStyle="bold" />





            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/select"
                    android:layout_width="fill_parent"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/payment_method_information"
                    android:textColor="@color/white_greyish"
                    android:textSize="19sp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout1">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/ic_search_azul" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="@string/add_contact_fre"
                        android:textColor="@color/background_color"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/activate_card_number"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/balance_card_number"
                    android:inputType="number"
                    android:maxLength="16"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/name_"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/name_1"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/cvv_title"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/ccv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/cvv"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/card_type"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp"/>
                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="10sp"
                    android:backgroundTint="@color/white_greyish"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/date_recharge"
                    android:textColor="@color/white_greyish"
                    android:textSize="14sp" />


                <GridLayout
                    android:columnCount="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/month"
                        android:textColor="@color/white_greyish"
                        android:textSize="14sp" />


                    <Spinner
                        android:id="@+id/month"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/white_greyish"
                        android:padding="3dp"
                        android:layout_gravity="fill_horizontal"
                        android:textAlignment="gravity"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_greyish"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/year"
                        android:textColor="@color/white_greyish"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/year"
                        android:layout_width="130dp"
                        android:layout_height="37dp"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/white_greyish"
                        android:inputType="phone"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_greyish"
                        android:textSize="10sp" />


                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white" />



                <Button
                    android:id="@+id/signFind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/loginbutton_selector"
                    android:padding="12dp"
                    android:text="@string/next"
                    android:textColor="@color/background_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/backToLoginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/loginbutton_selector"
                    android:padding="12dp"
                    android:text="@string/back"
                    android:textColor="@color/background_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>




</RelativeLayout>
    </ScrollView>
