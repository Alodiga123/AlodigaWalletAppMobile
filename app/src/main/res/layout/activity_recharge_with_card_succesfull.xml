        android:textSize="16sp"
        android:textStyle="bold" />
    <TableLayout
        android:id="@+id/txtTableLayout_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConfirmationPaymen"
        android:layout_centerHorizontal="true"
        >


        <TableRow>
            <TextView
                android:id="@+id/txtPaymentReceive_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="3dip"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="16sp"
                android:text="@string/number_trans"/>
            <TextView
                android:id="@+id/number_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="3dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="14sp"
                />
        </TableRow>
        <TableRow>
        <TextView
            android:id="@+id/txtPaymentReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="3dip"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp"
            android:text="@string/destination_date_time"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="3dip"
            android:singleLine="true"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="14sp"
            />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/white" />


</TableLayout>



    <TableLayout
        android:id="@+id/txtTableLayout_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConfirmationPaymen"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/select"
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:text="@string/payment_method_information"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white" />

        <TableRow>

            <TextView
                android:id="@+id/txtPaymentReceiver"
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:padding="3dip"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/balance_card_number"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="3dip"
