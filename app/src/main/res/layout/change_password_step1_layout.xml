<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo_960x750"
        android:padding="15dp" >


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="396dp"
            android:layout_height="481dp"
            android:background="@drawable/radius_fondo"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="15dp"

            >

            <View
                android:id="@+id/space1"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@color/white_greyish" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="83dp"
                android:gravity="top|center"
                android:text="@string/change_password_info"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/security_level"
                android:textColor="@color/white_greyish" />

            <ProgressBar
                android:id="@+id/progressBarPassword"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:paddingVertical="10dp"
                android:progressBackgroundTint="@color/white_greyish"
                android:progressTint="@color/yellow" />

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:maxLength="8"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/yellow"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="@string/repeat_password"
                android:inputType="textPassword"
                android:maxLength="8"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/yellow"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />

            <Button
                android:id="@+id/change"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="10dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/backToLoginBtn"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector_2"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="@string/close_password_recommendation"
                android:textColor="@color/yellow"
                android:justificationMode="inter_word"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="376dp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="-25dip"
            android:background="@drawable/fondo_960x750"
            android:orientation="vertical"
            android:paddingBottom="0dp"></LinearLayout>


    </RelativeLayout>

</ScrollView>
