<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_960x750"
    android:padding="15dp" >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="396dp"
        android:layout_height="481dp"
        android:background="@drawable/radius_fondo"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="15dp"

        >

    <View
        android:id="@+id/space1"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/white_greyish" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/TextWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/change_succesfful"
        android:textColor="@color/white_greyish"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />


        <RelativeLayout
            android:layout_width="354dp"
            android:layout_height="274dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/sucessfullImageId"
                android:layout_width="299dp"
                android:layout_height="255dp"
                android:gravity="center"
                android:padding="10dp"
                android:paddingLeft="500dp"
                android:src="@drawable/ic_check"
                android:text="@string/confirmation_title_successfull"
                android:textColor="@color/background_color"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>


    <Button
        android:id="@+id/step1_next_button"
        android:layout_width="275dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="@string/process_finished"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="376dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="-25dip"
        android:background="@drawable/fondo_960x750"
        android:orientation="vertical"
        android:paddingBottom="0dp"></LinearLayout>


</RelativeLayout>

</ScrollView>
