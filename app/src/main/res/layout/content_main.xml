<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_g"
    android:padding="15dp">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="45dp"
    android:id="@+id/principal">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/space4"/>

    <LinearLayout
        android:background="@color/background_g"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:id="@+id/tituloprincipal"
     >
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white_greyish"
            android:padding="10dp"
            android:paddingBottom="10dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/space6"/>
    <View
        android:id="@+id/space1"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/simpleSwitch"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/white_greyish" />


    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="79dp"
            android:layout_height="59dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_logo_alodiga_vector_2" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white_greyish"

                />
            <TextView
                android:id="@+id/phoneuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/emailuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/space7"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white_greyish"
            android:padding="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/tituloprincipal"
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
       >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="111dp"
            android:layout_above="@+id/titulo"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/layout_enviar"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_enviar"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/radius_fondo_main"
                    android:src="@drawable/icon_enviar_dinero" />

                <TextView
                    android:id="@+id/txt_enviar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="@string/send"
                    android:textColor="@color/verde"
                    android:textSize="13dp"
                    android:paddingTop="5dp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_recargar"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/radius_fondo_main"
                    android:src="@drawable/icon_recargar" />
                <TextView
                    android:id="@+id/txt_recargar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="@string/reload"
                    android:textColor="@color/amarillo"
                    android:textSize="13dp"
                    android:paddingTop="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_transferir"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/radius_fondo_main"
                    android:src="@drawable/icon_transferir" />
                <TextView
                    android:id="@+id/txt_transferir"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:text="@string/menu_transfer"
                    android:textColor="@color/yellow"
                    android:textSize="13dp"
                    android:paddingTop="5dp"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_retirar"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/radius_fondo_main"
                    android:src="@drawable/icon_retirar" />}
                <TextView
                    android:id="@+id/txt_retirar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="top|center"
                    android:paddingTop="5dp"
                    android:text="@string/aoutMoney"
                    android:textColor="@color/violeta"
                    android:textSize="13dp"

                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:layout_marginStart="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="3dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/idRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/background_g"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:scrollbars="vertical" />

    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
