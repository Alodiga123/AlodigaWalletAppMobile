<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:background="@drawable/side_nav_bar"
        >

        <TextView
            android:id="@+id/textbox"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:hint="Type to text"
            android:text="@string/dactivate_card_title"
            android:textColor="@color/colorTitleFunction"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="wrap_content"
            android:layout_height="443dp"
            android:layout_below="@+id/textbox"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/login_layout"
                android:padding="8dp"
                android:text="@string/activate_card_number"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/activate_number"
                android:inputType="text"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white" />


            <Button
                android:id="@+id/process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="12dp"
                android:paddingTop="20dp"
                android:text="@string/next"
                android:textColor="@color/background_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/backToLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="12dp"
                android:text="@string/back"
                android:textColor="@color/background_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>



</RelativeLayout>
    </ScrollView>
