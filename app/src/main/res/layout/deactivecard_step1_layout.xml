<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="15dp"
        android:background="@drawable/fondo_960x750"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/radius_fondo"
            android:padding="15dp"
            android:id="@+id/linearLayout"
            android:elevation="1dp">

        <View
            android:id="@+id/space1"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_below="@+id/simpleSwitch"
            android:background="@color/white_greyish" />


            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="98dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/dactivate_card_title"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/login_layout"
                android:padding="8dp"
                android:text="@string/activate_card_number"
                android:textColor="@color/white_greyish"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/activate_number"
                android:inputType="text"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white" />


            <Button
                android:id="@+id/process"
                android:layout_width="275dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="12dp"
                android:paddingTop="20dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/backToLoginBtn"
                android:layout_width="275dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginbutton_selector_2"
                android:padding="12dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="396dp"
            android:layout_height="309dp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="-35dip"
            android:background="@drawable/fondo_960x750"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            ></LinearLayout>


</RelativeLayout>
    </ScrollView>
