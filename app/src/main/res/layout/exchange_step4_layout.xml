<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_960x750"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/radius_fondo"
        android:padding="20dp"
        android:id="@+id/linearLayout"
        android:elevation="1dp">

    <View
        android:id="@+id/space1"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_below="@+id/simpleSwitch"
        android:background="@color/white_greyish" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:padding="10dp"
        android:text="@string/exchange_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

        <TableLayout
        android:id="@+id/txtTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConfirmationPaymen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
           >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/sucessfullImageId"
                    android:layout_width="fill_parent"
                    android:layout_height="85dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingLeft="500dp"
                    android:src="@drawable/ic_check"
                    android:text="@string/confirmation_title_successfull"
                    android:textColor="@color/background_color"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </RelativeLayout>
            <TableRow>
                <TextView
                    android:id="@+id/transactionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="15sp"
                    android:text="@string/destination_transaction_id"/>
                <TextView
                    android:id="@+id/txtTransactionId_3"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/dateinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="15sp"
                    android:text="@string/destination_date_time"/>
                <TextView
                    android:id="@+id/txtdate"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtincludeM_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="15sp"
                    android:text="@string/includeM"/>
                <TextView
                    android:id="@+id/txtincludeM"
                    android:padding="3dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow android:layout_height="46dp">
                <TextView
                    android:id="@+id/commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="15sp"
                    android:text="@string/commission"/>
                <TextView
                    android:id="@+id/txtcommission"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="14sp"

                    />
            </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txtpercentage_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:text="@string/percentageRate"/>
            <TextView
                android:id="@+id/txtpercentage"

                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="14sp"

                />

        </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtAmount_ini_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="15sp"
                    android:text="@string/a_ini"/>
                <TextView
                    android:id="@+id/txtAmount_ini"

                    android:padding="2dip"
                    android:singleLine="true"
                    android:textColor="@color/white_greyish"
                    android:textColorHint="@color/white_greyish"
                    android:textSize="14sp"

                    />
            </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/phone_number_message_rem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:text="@string/debitTotal"/>
            <TextView
                android:id="@+id/txtdebitar"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/phone_number_message_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:text="@string/destinationA"/>
            <TextView
                android:id="@+id/txtDestino"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="14sp"/>
        </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="@string/table_title_exchange_rate"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />




        <TableRow>
            <TextView
                android:id="@+id/rateSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txtrateSource"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="14sp"/>
        </TableRow>


        <TableRow>
            <TextView
                android:id="@+id/rateDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txtrateDestination"
                android:padding="2dip"
                android:singleLine="true"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="14sp"/>
        </TableRow>




    </TableLayout>


    <Button
        android:id="@+id/btnProcess"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="@string/process_finished"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnShareInformation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton_selector_2"
        android:padding="3dp"
        android:text="@string/process_finished_share"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="309dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="-35dip"
        android:background="@drawable/fondo_960x750"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        ></LinearLayout>
</RelativeLayout>

</ScrollView>