<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/fondo_960x750"
   >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/radius_fondo"
        android:padding="20dp"
        android:id="@+id/linearLayout"
        android:elevation="1dp">

        <View
            android:id="@+id/space1"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_below="@+id/simpleSwitch"
            android:background="@color/white_greyish" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="83dp"
            android:gravity="top|center"
            android:text="@string/forgot_password_info"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/counter_time"
            android:textColor="@color/yellow"
            android:textSize="17sp"
            android:layout_gravity="center"/>


        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/cmTimer" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/pin_text_received"
            android:textColor="@color/white_greyish"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtMobileCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/password_gray"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/ingrese_n_token"
            android:inputType="number"
            android:padding="10dp"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/yellow"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />


        <Button
            android:id="@+id/step1_next_button"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/backToLoginBtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/loginbutton_selector"
            android:padding="3dp"
            android:text="@string/next"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
                android:id="@+id/backToLoginBtn"
                android:layout_width="275dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
               android:layout_marginTop="5dp"
                android:background="@drawable/loginbutton_selector_2"
                android:padding="3dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="309dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="-35dip"
        android:background="@drawable/fondo_960x750"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        ></LinearLayout>
</RelativeLayout>

</ScrollView>
