<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="20dp"
    android:background="@drawable/side_nav_bar"
    >
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    >
        <LinearLayout

            android:id="@+id/login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbox"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


        <TextView
        android:id="@+id/textbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|center"
        android:hint="Type to text"
        android:text="@string/menu_aoutMoney"
        android:textColor="@color/background_color"
        android:textSize="25sp"
        android:textStyle="bold"/>





        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:padding="30dp"
            android:text="@string/bank_info_selec_account_witdraw"
            android:textColor="@color/white_greyish"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinnerAccountBank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp"
            android:backgroundTint="@color/white_greyish"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white" />


            <LinearLayout
                android:id="@+id/infoAccountLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                android:id="@+id/accountNumberLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/banck_account_number"
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/accountNumberLabelValue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white" />


            <TextView
                android:id="@+id/accountDescriptionLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/bank__account_type"
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/accountDescriptionLabelValue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white" />


            <TextView
                android:id="@+id/accountAbaCode"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/aba"
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/accountAbaCodeValue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/amount_info"
                android:textColor="@color/white_greyish"
                android:textSize="16sp" />
            </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white" />



            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/producto_info_witdraw"
            android:textColor="@color/white_greyish"
            android:textSize="16sp" />




        <Spinner
            android:id="@+id/spinnerproducto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp"
            android:backgroundTint="@color/white_greyish"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/amount_info"
            android:textColor="@color/white_greyish"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/descrip_info"
            android:textColor="@color/white_greyish"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtdescript"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:hint="@string/descrip"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white" />

        <Button
            android:id="@+id/signFind"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="10dp"
            android:text="@string/buttonProcesarRetiro"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/backToLoginBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="10dp"
            android:text="@string/back"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        </LinearLayout>
</ScrollView>
</RelativeLayout>

