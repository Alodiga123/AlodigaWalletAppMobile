<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/side_nav_bar">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/remesas_title"
        android:textColor="@color/background_color"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="@string/addressee"
        android:layout_gravity="center"
        android:textColor="@color/white_greyish"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish"
        android:paddingTop="10dp"/>



    <TableLayout
        android:id="@+id/txtTableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConfirmationPaymen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TableRow android:layout_width="337dp">

            <TextView
                android:id="@+id/txtPaymentReceiver3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/Recipient_name"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name1"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:hint="@string/name"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/txtIdentificationNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:singleLine="true"
                android:text="@string/Recipient_lastname"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:hint="@string/lastName"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />
        <TextView
            android:id="@+id/select12"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="@string/Recipient_address"
            android:gravity="center"
            android:textColor="@color/white_greyish"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />
        <TableRow>

            <TextView
                android:id="@+id/txtConcept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:singleLine="true"
                android:text="@string/kyc_text_step4_state_1"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:hint="@string/kyc_text_step4_state_"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dip"
                android:singleLine="true"
                android:text="@string/kyc_text_step4_city"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:hint="@string/kyc_text_step4_city_"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
        </TableRow>


        <TableRow android:layout_width="334dp">

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:singleLine="true"
                android:text="@string/kyc_text_step4_code"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/codezip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:hint="@string/kyc_text_step4_codezip"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:layout_width="324dp">

            <TextView
                android:id="@+id/txtPaymentReceiver2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="2dip"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/kyc_text_step4_av_"
                android:textColor="@color/white_greyish"
                android:textColorHint="@color/white_greyish"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/av"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="right"
                android:hint="@string/kyc_text_step4_av"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />
        </TableRow>

    </TableLayout>




    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />



    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="@string/next"
        android:textColor="@color/background_color"
        android:textSize="17sp"
        android:textStyle="bold" />



</LinearLayout>
</ScrollView>