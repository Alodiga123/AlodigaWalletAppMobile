<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/fondo_960x750">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="436dp"
        android:background="@drawable/radius_fondo"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="20dp">


        <View
            android:id="@+id/space1"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_below="@+id/simpleSwitch"
            android:layout_gravity="center"
            android:background="@color/white_greyish" />

        <TextView
            android:id="@+id/TextWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/login_layout"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/welcome_secure_manual_recharge"
            android:textColor="@color/white_greyish"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white_greyish" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="279dp"
            android:layout_height="235dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_check" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/white_greyish" />

        <Button
            android:id="@+id/finalizar"
            android:layout_width="275dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="3dp"
            android:text="@string/process_finished"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="309dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="-35dip"
        android:background="@drawable/fondo_960x750"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        ></LinearLayout>

</RelativeLayout>
</ScrollView>