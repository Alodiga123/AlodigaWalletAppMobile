<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@drawable/side_nav_bar"
   >

    <TextView
        android:id="@+id/textbox"
        android:layout_width="375dp"
        android:layout_height="114dp"
        android:layout_weight="1"
        android:gravity="top|center"
        android:hint="Type to text"
        android:text="@string/menu_recharge"
        android:textColor="@color/background_color"
        android:textSize="25sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="wrap_content"
        android:layout_height="412dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bank_info"
            android:textColor="@color/white_greyish"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/spinnerbank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white_greyish" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/recharge_id"
            android:textColor="@color/white_greyish"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtCOD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/rechargeCOD"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/white_greyish" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/amount_info"
            android:textColor="@color/white_greyish"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:hint="@string/amount"
            android:inputType="textCapWords"
            android:maxLength="35"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/white_greyish" />


        <Button
            android:id="@+id/signFind"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="3dp"
            android:text="@string/buttonProcesarRecarga"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>




</RelativeLayout>