<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/background_g"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/radius_fondo"
        android:padding="20dp"
        android:id="@+id/linearLayout"
        android:elevation="1dp">

    <View
        android:id="@+id/space1"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_below="@+id/simpleSwitch"
        android:background="@color/white_greyish" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/TextWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/payment_method_drop_succefull"
        android:textColor="@color/white_greyish"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/white_greyish" />


        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="272dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/sucessfullImageId"
                android:layout_width="245dp"
                android:layout_height="267dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:paddingLeft="500dp"
                android:src="@drawable/ic_check"
                android:text="@string/confirmation_title_successfull"
                android:textColor="@color/background_color"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>











    <Button
        android:id="@+id/step1_next_button"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/process_finished"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />



    </LinearLayout>



</RelativeLayout>

</ScrollView>
