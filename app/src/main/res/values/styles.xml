<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="fontFamily">@font/sf_compact</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="yourDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/yellow</item>
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="android:background">@color/background_g</item>
        <item name="android:textColor">@color/white_greyish</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:textColorHint">@color/white_greyish</item>
        <item name="android:textColorPrimary">@color/white_greyish</item>
    </style>

    <style name="DialogExit">
        <item name="android:background">@drawable/selector_menu</item>
        <item name="android:textColor">@color/white_greyish</item>
        <item name="android:popupBackground">@color/background_g</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item> </style>
    <!-- Popup Menu Background Color styles -->
    <style name="MyPopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/background_g</item>
    </style> <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@color/background_g</item></style>

    <style name="DialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColor">@color/white_greyish</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/background_g</item>
    </style>
    <style name="appBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>
